mixin btn({icon=undefined})

  if attributes.onclick
    button.btn&attributes(attributes) 
      if icon
        if icon.side === 'left'
          span.icon(class=icon.class)
        block 
        if icon.side === 'right'
          span.icon(class=icon.class)
  else if attributes.href 
    a.btn&attributes(attributes) 
      if icon
        if icon.side === 'left'
          span.icon(class=icon.class)
        block
        if icon.side === 'right'
          span.icon(class=icon.class)
