mixin image-w-placeholder({path=undefined, alt=undefined})
  span.image-w-placeholder 
    img(src=require('../'+ path + '?size=100'), class="placeholder-image")
    picture
      source(srcset=require('../'+ path + '?format=webp&sizes[]=480,sizes[]=640,sizes[]=800,sizes[]=1024,sizes[]=1450,sizes[]=1920'), type="image/webp")
      img(src=require('../'+ path), alt=alt)